<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    tools:context="id.noidea.firstblood.activity.FindActivity"
    android:fillViewport="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingBottom="16dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linLayout1"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/phone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">
                    <TextView
                        android:id="@+id/goldar_text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="GOLONGAN DARAH"
                        android:textSize="12sp"
                        android:textAllCaps="true"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:background="@drawable/capsule_profile">
                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">
                    <TextView
                        android:id="@+id/rhesus_text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="RHESUS"
                        android:textSize="12sp"
                        android:textAllCaps="true"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:background="@drawable/capsule_profile">
                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/name_title"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="DESKRIPSI"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textAllCaps="true"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:text="Dibutuhkan segera, golongan darah A+ saat ini juga untuk Sdr. Fathi Abdat, yang sakit kompilasi (jantung, paru-paru, ginjal, diabetes)."
                android:background="@drawable/capsule_profile"/>
            <TextView
                android:id="@+id/rs_title"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="RUMAH SAKIT"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textAllCaps="true"/>

            <EditText
                android:id="@+id/name_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textSize="15sp"
                android:inputType="text"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:text="Rumah Sakit Advent - Bandung"
                android:background="@drawable/capsule_profile"/>
            <Button
                android:id="@+id/find"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="KIRIM PERMINTAAN"
                android:textAllCaps="true"
                android:background="@drawable/capsule_button"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
