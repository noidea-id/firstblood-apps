<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="id.noidea.firstblood.fragment.ProfileFragment">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/colorAccent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBody"
            android:paddingBottom="16dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/naufal"
                app:civ_border_color="#ecf0f1"
                app:civ_border_width="0.5dp" />

            <TextView
                android:id="@+id/name_title"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="NAMA"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="Naufal Fazanadi"
                android:background="@drawable/capsule_profile"/>
            <TextView
                android:id="@+id/email_title"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="E-MAIL"
                android:textSize="12sp"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="naufal.fazanadi@gmail.com"
                android:background="@drawable/capsule_profile"/>
            <TextView
                android:id="@+id/phone_title"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="NO HANDPHONE"
                android:textSize="12sp"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="087829473940"
                android:background="@drawable/capsule_profile"/>

            <LinearLayout
                android:id="@+id/linLayout1"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/phone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">
                    <TextView
                        android:id="@+id/goldar_text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="GOLONGAN DARAH"
                        android:textSize="12sp"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/goldar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:text="AB"
                        android:background="@drawable/capsule_profile"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">
                    <TextView
                        android:id="@+id/rhesus_text"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="RHESUS"
                        android:textSize="12sp"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/rhesus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:text="+"
                        android:background="@drawable/capsule_profile"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:onClick="logout"
                android:text="logout"
                android:textAllCaps="true"
                android:background="@drawable/capsule_button"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
